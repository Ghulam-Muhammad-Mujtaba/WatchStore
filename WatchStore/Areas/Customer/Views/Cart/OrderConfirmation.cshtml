@model WatchStore.Models.Models.OrderHeader

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1 class="text-success">Order Confirmation</h1>
            <p class="fs-4">Your order has been successfully placed.</p>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-6">
            <h3>Order Details</h3>
            <p><strong>Order ID: </strong>@Model.Id</p>
            <p><strong>Order Date: </strong>@Model.OrderDate</p>
            <p><strong>Shipping Address:</strong> @Model.StreetAddress</p>
        </div>
        <div class="col-md-6">
            <h3>Payment Details</h3>
            <p><strong>Payment Method: </strong>Credit Card</p>
            <p><strong>Total Amount: </strong>@Model.OrderTotal.ToString("c")</p>
            <p><strong>Payment Status: </strong>@Model.PaymentStatus</p>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-12 text-center">
            <p class="fs-4">Thank you for shopping with us!</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-dark">Continue Shopping</a>
        </div>
    </div>
</div>
