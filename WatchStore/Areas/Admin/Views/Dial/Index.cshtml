@using WatchStore.Models.Models;
@model IEnumerable<Dial>
@{
    ViewData["Title"] = "Dial";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Dial List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Dial" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Dial
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped text-center" style="width:100%">
        <thead>
            <tr>
                <th>
                    Dial Id
                </th>
                <th>
                    Material
                </th>
                <th>
                    Diameter (mm)
                </th>
                <th>
                    Thickness (mm)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="10%">
                        @obj.Id
                    </td>
                    <td width="20%">
                        @obj.Material
                    </td>
                    <td width="20%">
                        @obj.Diameter
                    </td>
                    <td width="20%">
                        @obj.Thickness
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Dial" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Dial" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>